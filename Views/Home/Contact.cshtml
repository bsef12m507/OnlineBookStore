@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>

<head>
    <title></title>
    <link href="bootstrap.css" rel="stylesheet" />
    <script src="bootstrap.js"></script>
</head>
<body>

    <div class="container">
        <div class="row" style=" margin-bottom: 1em; background-color: #ffffff; padding-top: 6em; padding-bottom: 6em; padding-left: 5em">
            <div class="col-sm-7" style="background-color:#ffffff;padding-top:4em">
                <legend class="text-center header thumbnail" style="font-size: 20px; color: #4f2008;  border-color: #816f0c; font-family: Castellar">Leave your message</legend>
               
                    <fieldset class="thumbnail" style="border-color: #816f0c;background-color: #ffffff">
                        <form style=" border-color: #816f0c; background-color: #ffffff;padding-left:6em;padding-right:8em" action="/Home/SubmitMessage" method="post" id="f1">                         
                            
                            <div class="form-group">
                                <br />
                               <br />
                                <input class=" form-control" type="text" style="width:80%;height:40px" name="name" placeholder="Name" required /><br />
                                <input class=" form-control" type="email" style="width:80%;height:40px" name="email" placeholder="Email" required /><br />
                                <textarea class=" form-control" style=" width:80%; height:120px" placeholder="Enter your massage for us here." name="message"></textarea><br />
                                <br />
                                <br />

                                <input class="btn btn-default"  type="submit" value="Submit" style=" font-weight: bold; border-color: #816f0c; background-color: #f8eca6" />
                            </div>
                        </form> 
                    </fieldset>
                
            </div>

            <div class="responsive">
                <div class="img col-sm-5 pull-right" style="padding-top:4em">
                    <img class="img-circle" src=~/Content/images/c3.jpg style="width:90%">
                </div>
            </div>

        </div>
    </div>
</body>
</html>