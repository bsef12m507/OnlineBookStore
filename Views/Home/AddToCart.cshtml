@using onlineBookStore.Models
@model List<Book>

@{
    ViewBag.Title = "AddToCart";
      Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>
    </title>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js"></script>
    <script type="text/javascript" src="/fancybox/jquery.fancybox-1.3.4.pack.js"></script>
    <script type="text/javascript" src="/fancybox/jquery.easing-1.4.pack.js"></script>
    <script type="text/javascript" src="/fancybox/jquery.mousewheel-3.0.4.pack.js"></script>
    <link rel="stylesheet" href="/fancybox/jquery.fancybox-1.3.4.css" type="text/css" media="screen" />

</head>
<body>
    <div class="container">
        <div class="row" style="background-color: #ffffff;padding-top:4em; padding-bottom: 4em">     

             <div class="col-sm-1" style="background-color:#ffffff;visibility:hidden">
                <h1>Hidden</h1>
                </div>
            <div class="text-center header">
                <p style="font-size:larger;color:deepskyblue;font-size:x-large;font-weight:bold">@ViewBag.Message</p><br />
            </div>
                <div class="col-sm-10" style="background-color:#ffffff">
                    <div class="box">
                        <h2 class="text-center header thumbnail" style="color: #5f133f; margin-top: 3em; font-family: Castellar">Your Cart</h2>
                        <div class="box-body">
                            <table class="table table-bordered table-striped" style="font-size:16px">
                                <thead>
                                    <tr>
                                       
                                        <th>Image</th>
                                        <th>Book Name</th>
                                        <th>Author Name</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var u in Model)
                                    {

                                        <tr>
                                            @{string s = @u.bookId + "0.jpg";
                                            <td><img src="~/Files/@s" alt="" style="width:30%" /><br /></td>
                                            }
                                            <td>@u.name</td>
                                            <td>@u.Author</td>
                                            <td>@u.quantity</td>
                                            <td>Rs. @u.unitPrice</td>
                                            <td>Rs. @(int.Parse(u.quantity) * int.Parse(u.unitPrice))</td>
                                            <td><a class="btn btn-success"  href="/Home/DeleteFromCart?bId=@u.bookId">Remove</a></td>
                                        </tr>
                                    }
                                    <tr>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        
                                        <td><strong>Rs. @TempData["Amo"]</strong></td>
                                </tr>
                            </tbody>
                        </table>

                        <div>

                        </div>

                    </div>
                </div>

                <div class="pull-right" style="font-weight:bold">
                    
                    <a href="/Home/Index" class="btn btn-primary">Continue</a>
                    <a href="/Home/CheckOut" class="btn btn-primary" style="margin-left:2em">Check Out</a>
                    
                </div>

            </div>

           
            <div class="col-sm-3 pull-right" style="background-color: #ffffff; visibility: hidden; margin-top: 1em">
                <h1>Hidden</h1>
            </div>


            <div class="col-sm-8 pull-right" style="margin-top:1em">
                <img class="pull-right" src="~/Content/images/c1.jpg" style="width:80%" />
            </div>
            <div class="col-sm-1" style="background-color: #ffffff; visibility: hidden; margin-top: 1em">
                <h1>Hidden</h1>
            </div>
        </div>
    </div>

</body>
</html>