                    <div class="box box-primary">
                        <div class="box-header">
                            <h3 class="box-title">Delete Author</h3>
                        </div><!-- /.box-header -->
                        <section class="content">
                            <div class="box-body">
                                @using (@Html.BeginForm("DeleteAuthorToTable", "Admin", FormMethod.Post))
                                {
                                   
                                    @Html.HiddenFor(m => m.Id);
