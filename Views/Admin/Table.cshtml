@using onlineBookStore.Models
@model List<User>

@{
    Layout = null;
    Layout = "~/Views/Shared/_Admin.cshtml";
}



<!DOCTYPE html>
<html>
<head>
    <title>Admin Panel</title>

    <link href="~/bootstrap.css" rel="stylesheet" />
    <script src="~/bootstrap.js"></script>
    
</head>

<body class="skin-blue sidebar-mini">

    <div class="wrapper">

        @Html.Partial("~/Views/Shared/_AdminSideBar.cshtml")
          
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    User Table
                    <small>preview of simple tables</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="/Home/LogOut"><i class="fa fa-dashboard"></i>Log Out</a></li>
                    <li><a href="/Admin/Panel"><i class="fa fa-dashboard"></i> Home</a></li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Data of All Users</h3>
                                <form action="/Admin/SearchUser" method="get" class="col-sm-4 pull-right">
                                    <div class="input-group">
                                        <input type="text" name="na" class="form-control" placeholder="Search By User Name (Email)" />
                                        <span class="input-group-btn">
                                            <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
                                        </span>
                                    </div>
                                </form>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Email</th>
                                            <th>Password</th>
                                            <th>Address</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach(var u in Model)
                                        {                                          
                                            <tr>
                                            <td>@u.fname</td>
                                            <td>@u.lname</td>
                                            <td>@u.email</td>
                                            <td>***</td>
                                            <td>Street # @u.Street ,@u.Town,@u.City,@u.Country</td>
                                            </tr> 
                                        }                                
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Email</th>
                                            <th>Password</th>
                                            <th>Address</th>
                                        </tr>
                                    </tfoot>
                                </table>
                                </div>
                            </div>
                            </div>
                    </div>
                    </section>
        
        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.0
            </div>
            <strong>Copyright &copy; 2014-2015 <a href="#">BestSellers</a>.</strong> All rights reserved.
        </footer>
    </div><!-- ./wrapper -->
  
</body>
</html>
