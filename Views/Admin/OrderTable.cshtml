@{
    Layout = null;
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@using onlineBookStore.Models
@model List<Order>


<!DOCTYPE html>
<html>
<head>
    <title>Admin Panel</title>

    <link href="~/bootstrap.css" rel="stylesheet" />
    <script src="~/bootstrap.js"></script>

</head>

<body class="skin-blue sidebar-mini">

    <div class="wrapper">

        @Html.Partial("~/Views/Shared/_AdminSideBar.cshtml")

        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Orders Table
                    <small>preview of simple tables</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="/Home/LogOut"><i class="fa fa-dashboard"></i>Log Out</a></li>
                    <li><a href="/Admin/Panel"><i class="fa fa-dashboard"></i> Home</a></li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Data of All Orders</h3>
                                <form action="/Admin/SearchOrder" method="get" class="col-sm-4 pull-right">
                                    <div class="input-group">
                                        <input type="text" name="na" class="form-control" placeholder="Search By Customer Name" />
                                        <span class="input-group-btn">
                                            <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
                                        </span>
                                    </div>
                                </form>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Oredr Id</th>
                                            <th>Customer Name</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                           
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var u in Model)
                                        {                                            
                                            <tr>
                                                <td>@u.orderId</td>                                                
                                                <td>@u.User.email</td>
                                                <td>@u.date</td>
                                                <td>@u.status</td>
                                              
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Oredr Id</th>
                                            <th>Customer Name</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.0
            </div>
            <strong>Copyright &copy; 2014-2015 <a href="#">BestSellers</a>.</strong> All rights reserved.
        </footer>
    </div><!-- ./wrapper -->

</body>
</html>
