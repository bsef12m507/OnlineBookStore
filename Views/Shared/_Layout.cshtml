<body style="background-color: #f6ebad">
        <div class="container">
            <div class="row">
                <ul style="margin-top:2em">
                    <li class="list-unstyled pull-right" style="border-bottom: thin; border-bottom-color: #4f2008"><a style="color: #4f2008;font-size:small" href="/Home/ViewCart"><span class="glyphicon glyphicon-shopping-cart"></span>Shopping Cart</a></li>

                    @if(Session["name"]!=null)
                    {
                         <li class="list-unstyled pull-right" style="margin-right:1%"><a style="color: #4f2008; font-size: small" href="/Admin"><span class="glyphicon glyphicon-plus-sign"></span>Admin Panel</a></li>
                    }
                   
                    
                </ul>
                <nav class="navbar navbar-inverse" role="navigation" style="margin-top: 6em; margin-bottom: 1em">

                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav pull-left">
                            <li><a class="navbar-brand" style="font-size: 30px; font-family: Castellar; color: #fff" href="#">Best Sellers</a></li>
                            </ul>
                            <ul class="nav navbar-nav pull-right">
                                <li>
                                    <a class=" navbar-brand" style="color: #fff" href="/Home">Home</a>
                                </li>
                                @*<li>
                                    <a class=" navbar-brand" style="color: #fff" href="/Home/ViewCart">Shopping Cart</a>
                                </li>*@
                               
                                <li class="dropdown">

                                    @if (Session["u_name"] != null || Session["name"] != null)
                                    { 
                                            <a class=" navbar-brand" style="color: #fff" href="/Home/LogOut">Log Out</a>
                                       
                                    }

                                    @if (Session["u_name"] == null && Session["name"] == null)
                                    {
                                        <a data-toggle="dropdown" class="dropdown-toggle navbar-brand" style="color: #fff" href="#"><span class="icon-lock"></span> Login <b class="caret"></b></a>
                                        <div class="dropdown-menu ">
                                        <form action="/Home/LogInSession" class="form-horizontal loginFrm" style="padding:2em" method="post">
                                            <div class="control-group">
                                                <input type="text" class="span5 thumbnail" name="email" placeholder="User Name">
                                            </div>
                                            <div class="control-group">
                                                <input class="span5 thumbnail" type="password" name="password" placeholder="Password">
                                            </div>
                                            
                                            <div class="control-group">
                                                <button type="submit" class="btn btn-primary">Sign in</button>
                                            </div>

                                        </form>
                                    </div>

                                    }
                                </li>
                
                                   @if (Session["u_name"] == null && Session["name"] == null)
                                    {
                                         <li>
                                        <a class=" navbar-brand" style="color: #fff" href="/Home/Register">Register</a>
                                        </li>
                                   }

                                <li>
                                    <a class=" navbar-brand" style="color: #fff" href="/Home/About">About</a>
                                </li>
                                <li>
                                    <a class=" navbar-brand" style="color: #fff" href="/Home/Contact">Contact Us</a>
                                </li>

                            </ul>

                    </div>
                    <!-- /.navbar-collapse -->
                </nav>

                @*<div class="slider" style=" margin-left: 7em; margin-right: 7em; max-width: 100%;min-width:100%;max-height:100%;min-height:100%;position:absolute">
                <img src="~/Content/themes/base/images/image10.jpg" alt="" width="964" height="340" style="max-width:100%; min-width:70%;max-height:100%;min-height:100%" />
            </div>*@

                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class=" carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                        <li data-target="#myCarousel" data-slide-to="3"></li>
                        <li data-target="#myCarousel" data-slide-to="4"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="~/Content/themes/base/images/bgn.jpg" alt="" style="width: 100%; vertical-align: middle">
                        </div>

                        <div class="item">
                            <img src="~/Content/themes/base/images/bgn7.jpg" alt="" style="width: 100%; vertical-align: middle">
                        </div>


                        <div class="item ">
                            <img src="~/Content/themes/base/images/bgn2.png" alt="" style="width:100%;vertical-align:middle">
                        </div>
                        <div class="item">
                            <img src="~/Content/themes/base/images/bgn3.png" alt="" style="width:100% ;vertical-align:middle">
                        </div>

                        
                        <div class="item">
                            <img src="~/Content/themes/base/images/bgn9.jpg" alt="" style="width: 100%; vertical-align: middle">
                        </div>
                        
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
</div>

        @RenderBody()
   
        

    <div class="container">
        <div class="row" style="margin-top: 1em; padding-bottom: 3em; margin-bottom: 2em; background-color:#4f2008">

            <div class="col-sm-5" style="color:#fff;padding-left:2em">
                <h3>About BestSellers</h3>
                <h4 style="font-family:Calibri">we are a growing texas-based company and we got our start by selling books five years ago from our garage. we love to read and discovered that we could share our hundreds of books with others by selling them online.</h4>
            </div>
            <div class="col-sm-3" style="color:#fff;padding-left:4em">
                <h3>Store</h3>
                <ul style="color:#fff">
                    <li><a href="/Home/Index" style="color:#fff"><h5 style="font-family:Calibri">Home</h5></a></li>
                    @if (Session["u_name"] != null || Session["name"] != null)
                    {
                        <li><a href="/Home/LogOut" style="color:#fff"><h5 style="font-family:Calibri">Log Out</h5></a></li>
                    }else{
                        <li><a href="/Home/Register" style="color:#fff"><h5 style="font-family:Calibri">Log In</h5></a></li>
                    }
                    
                    <li><a href="/Home/ViewCart" style="color:#fff"><h5 style="font-family:Calibri">Cart</h5></a></li>
                    <li><a href="/Home/ViewCart" style="color:#fff"><h5 style="font-family:Calibri">Checkout</h5></a></li>
                </ul>
            </div>

            <div class="col-sm-4" style="color:#fff;padding-left:4em">
                <h3>Contact</h3>
                <ul style="color:#fff;font-family:Calibri">
                    <li><h5 style="color:#fff">Contact no: +92-333-1234567</h5></li>
                    <li><h5>Email: bestsellers@gmail.com</h5></li>
